@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<h2>@Localizer["UploadHeader"]</h2>

<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <label class="form-label">@Localizer["UploadGenreLabel"]</label>
    <select name="genreId" class="form-select w-25">
        @foreach (var g in ViewBag.Genres)
        {
            <option value="@g.Id">@g.Name</option>
        }
    </select>

    <label class="form-label mt-2">@Localizer["UploadFileLabel"]</label>
    <input type="file" name="file" class="form-control" />

    <button type="submit" class="btn btn-success mt-3">@Localizer["UploadButton"]</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
}
