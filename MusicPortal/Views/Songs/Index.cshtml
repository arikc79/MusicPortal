@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<h2>@Localizer["SongsHeader"]</h2>

<form method="get">
    <select name="genreId" class="form-select w-25" onchange="this.form.submit()">
        <option value="">@Localizer["AllGenres"]</option>
        @foreach (var g in ViewBag.Genres)
        {
            <option value="@g.Id">@g.Name</option>
        }
    </select>
</form>

<table class="table mt-3">
    <thead>
        <tr>
            <th>@Localizer["TableSongTitle"]</th>
            <th>@Localizer["TableGenre"]</th>
            <th>@Localizer["TableAction"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var song in Model)
        {
            <tr>
                <td>@song.Title</td>
                <td>@song.Genre?.Name</td>
                <td>
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Download" asp-route-id="@song.Id" class="btn btn-sm btn-primary">
                            @Localizer["DownloadButton"]
                        </a>
                    }
                    else
                    {
                        <button type="button" class="btn btn-sm btn-secondary" disabled
                                title="@Localizer["LoginToDownloadTooltip"]">
                            @Localizer["DownloadButton"]
                        </button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
