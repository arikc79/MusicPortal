@{
    ViewData["Title"] = "Адмін-панель";
}

<h2>🎛 Адмін-панель</h2>

<hr />
<h4>Жанри</h4>

<form asp-controller="Admin" asp-action="AddGenre" method="post" class="mb-3">
    <div class="input-group">
        <input type="text" name="name" class="form-control" placeholder="Новий жанр" required />
        <button type="submit" class="btn btn-success">Додати</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Назва</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in ViewBag.Genres)
        {
            <tr>
                <td>@genre.Id</td>
                <td>@genre.Name</td>
                <td>
                    <form asp-controller="Admin" asp-action="DeleteGenre" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@genre.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">🗑 Видалити</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />
<h4>Користувачі</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Логін</th>
            <th>Пошта</th>
            <th>Активний</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in ViewBag.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.IsActive</td>
                <td>
                    <form asp-controller="Admin" asp-action="ActivateUser" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-primary btn-sm">Активувати</button>
                    </form>

                    <form asp-controller="Admin" asp-action="DeleteUser" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">🗑 Видалити</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />
<h4>Пісні</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Назва</th>
            <th>Жанр</th>
            <th>Автор</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var song in ViewBag.Songs)
        {
            <tr>
                <td>@song.Id</td>
                <td>@song.Title</td>
                <td>@song.Genre?.Name</td>
                <td>@song.User?.UserName</td>
                <td>
                    <form asp-controller="Admin" asp-action="DeleteSong" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@song.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">🗑 Видалити</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
