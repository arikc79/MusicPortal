@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["AdminPanelTitle"];
}

<h2>ðŸŽ› @Localizer["AdminPanelTitle"]</h2>

<hr />
<h4>@Localizer["Genres"]</h4>

<form asp-controller="Admin" asp-action="AddGenre" method="post" class="mb-3">
    <div class="input-group">
        <input type="text" name="name" class="form-control" placeholder="@Localizer["NewGenre"]" required />
        <button type="submit" class="btn btn-success">@Localizer["AddButton"]</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Localizer["TableId"]</th>
            <th>@Localizer["TableName"]</th>
            <th>@Localizer["TableActions"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in ViewBag.Genres)
        {
            <tr>
                <td>@genre.Id</td>
                <td>@genre.Name</td>
                <td>
                    <form asp-controller="Admin" asp-action="DeleteGenre" asp-route-id="@genre.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger">ðŸ—‘</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
